
<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

   <div class="field">
   <div class="control">
     <%= f.input :status, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
   </div>
 </div>

 

 <%= f.button :submit, 'Post Status', class: 'button is-info' %>
<% end %>
