<div class="column is-8">
  <h3 class="title is-5 has-text-grey-light"><%= @forumscount.count %> forum posts</h3>
 </br></br>
  <div class="forums"> 
    <% if @forumscount.count == 0 %>
      <div class="content">
        <h3> Be the first to post in this section...</h3>
      </br>
        <%= link_to 'Create New Post', new_forum_path, class:"button is-info" %>
      </div>
      <% else %>
    <% @forums.each do |forum| %>
      <div class="columns bb-not-last pv10">
        <div class="column is-1">
          <%= gravatar_image_tag(forum.user.email, class:'border-radius-50', size: 48, alt: forum.user.username) %>
        </div>
        <div class="column is-8">
          <%= link_to forum do %>
            <h3 class="title is-5"><%= forum.title %></h3>
          <% end %>
          <div class="content">
            <%= truncate(strip_markdown(forum.content), length: 140) %>
            <p><em><small>Posted <%= time_ago_in_words(forum.created_at) %> ago in
              <% if forum.subject %>
                <%= link_to forum.subject.subject, forum.subject %>
              <% end %>
              by <%= forum.user.username %>
              </small>
              </em>
            </p>
          </div>
          <h2 class="subtitle is-5 has-text-grey"><%= forum.replies.count %> Replies</h2>
        </div>
        <% if user_signed_in? %>
        <% if forum_author(forum) || current_user.admin? %> 
        <div class="column has-text-right">
          <%= link_to 'Edit', edit_forum_path(forum), class:'button' %>
          <%= link_to 'Delete', forum, method: :delete, data: { confirm: 'Are you sure?' }, class: "button" %>

        </div>
        <% end %>
        <% end %>

      
      </div>
    <% end %>
    <% end %>
   

      <% if @page > 0%>
      <%= link_to "Previous", forums_path(page: @page - 1), class:"pagination-previous" %>     
      <% end %>

      <% if @page < @limitPages%>
      <%= link_to "Next Page", forums_path(page: @page + 1), class:"pagination-next" %> 
      <% end %>
        
      

  </div>
</div>