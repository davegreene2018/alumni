<div class="column">
  <h3 class="title is-5 has-text-black-light">My Forum Posts <%= @totalmyposts %> </h3>
  <div class="forums">
    <% @forums.each do |forum| %>
      <div class="columns">
        <div class="column is-1">
          <%= gravatar_image_tag(forum.user.email, class:'border-radius-50', size: 48, alt: forum.user.username) %>
        </div>
        <div class="column ">
          <%= link_to forum do %>
            <h3 class="title is-5"><%= forum.title %></h3>
          <% end %>
          <div class="content">
            <%= truncate(forum.content, length: 140) %>
            <p><em><small>Posted <%= time_ago_in_words(forum.created_at) %> ago in
              <% if forum.subject %>
                <%= link_to forum.subject.subject, forum.subject %>
              <% end %>
              by <%= forum.user.username %>
              </small>
              </em>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
 <% if @page < @limitPages%>
   <%= link_to "Next Page", myposts_path(page: @page + 1) %> 
 <% end %>
        |
  <% if @page > 0%>
    <%= link_to "Last Page", myposts_path(page: @page - 1) %>
  <% end %>