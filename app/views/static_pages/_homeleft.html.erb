<section class="section">
    <div class="container">
      <h1 class="title">Welcome to Alumni Ireland</h1>
      <h2 class="subtitle">
        An platform for students past and present <strong>TO GAIN</strong>, further knowledge in their chosen fields of study and <strong>Connect</strong> with like minded students.
      </h2>
    </div>
  </section>

  <div class="tile is-ancestor">
  <div class="tile is-vertical is-12">
   <div class="tile is-parent">
      <article class="tile is-child notification is-black">
         <h1 center><strong>Upcoming events</strong></h1>
        <% @events.each do |forum| %>
      <div class="columns">
       <div class="column ">
          <%= link_to forum do %>
            <h3 class="title is-5"><%= forum.title %></h3>
          <% end %>
          <div class="content">
            <%= truncate(forum.content, length: 140) %>
            <p><em><small>Posted <%= time_ago_in_words(forum.created_at) %> ago in
              <% if forum.subject %>
                <%= link_to forum.subject.subject, forum.subject %>
              <% end %>
              by <%= forum.user.username %>
              </small>
              </em>
            </p>
          </div>
        </div>
      </div>
    <% end %>
    </article>
  </div>

    <div class="tile is-parent">
      <article class="tile is-child notification is-black">
         <h1 center><strong>College life</strong></h1>
        <% @collegeLife.each do |forum| %>
      <div class="columns">
        <div class="column ">
          <%= link_to forum do %>
            <h3 class="title is-5"><%= forum.title %></h3>
          <% end %>
          <div class="content">
            <%= truncate(forum.content, length: 140) %>
            <p><em><small>Posted <%= time_ago_in_words(forum.created_at) %> ago in
              <% if forum.subject %>
                <%= link_to forum.subject.subject, forum.subject %>
              <% end %>
              by <%= forum.user.username %>
              </small>
              </em>
            </p>
          </div>
        </div>
      </div>
    <% end %>
      </article>
    </div>
  </div>
  
</div>
